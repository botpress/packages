{
  "name": "@bpinternal/entities",
  "version": "0.0.1",
  "description": "Botpress Entities Extractor",
  "main": "dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run build:type && pnpm run build:node && pnpm run build:web",
    "build:node": "pnpm run pack:node && pnpm run bundle:node",
    "build:web": "pnpm run pack:web && pnpm run bundle:web",
    "build:type": "tsc -p tsconfig.build.json",
    "pack:node": "wasm-pack build --verbose --out-dir ./pkg/node --target nodejs --release --no-pack",
    "pack:web": "wasm-pack build --verbose --out-dir ./pkg/web --target web --release --no-pack",
    "bundle:node": "ts-node -T ./build.ts --target nodejs",
    "bundle:web": "ts-node -T ./build.ts --target web",
    "dev": "ts-node -T ./src/index.ts",
    "start": "node ./dist/index.js",
    "test": "jest --roots ./dist --testPathIgnorePatterns \\.util\\.test\\.js && cargo test",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.1",
    "esbuild": "^0.19.4",
    "jest": "^26.6.3",
    "typescript": "^5.0.4",
    "wasm-pack": "^0.12.1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}

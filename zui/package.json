{
  "name": "@bpinternal/zui",
  "version": "1.0.0",
  "description": "An extension of Zod for working nicely with UIs and JSON Schemas",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest "
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@bpinternal/zod-to-json-schema": "^3.22.4"
  },
  "bundledDependencies": [
    "zod"
  ],
  "keywords": [],
  "author": "Botpress, Inc.",
  "license": "MIT",
  "packageManager": "pnpm@8.6.0+"
}
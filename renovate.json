{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "paths": ["const/**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "packagePatterns": ["*"]
    }
  ],
  "enabledManagers": ["dockerfile", "npm", "github-actions"],
  "prHourlyLimit": 3
}

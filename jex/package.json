{
  "name": "@bpinternal/jex",
  "version": "0.0.7",
  "description": "JSON-Extends; JSON Schema type checking library",
  "main": "dist/index.cjs",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build:node": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "pnpm build:node && pnpm build:types",
    "test": "vitest --run",
    "type:check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "pnpm format:check && pnpm type:check",
    "fix": "pnpm format:fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "ajv": "^8.12.0",
    "esbuild": "^0.20.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vitest": "1.5.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.1.0",
    "@types/json-schema": "^7.0.15",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.1.0"
}

{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "ES2021"
    ],
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/dist/",
    "**/node_modules/**/*.(ts|js)",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}

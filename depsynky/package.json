{
  "name": "@bpinternal/depsynky",
  "version": "0.2.1",
  "description": "CLI to synchronize dependencies accross a pnpm mono-repo",
  "main": "dist/index.js",
  "scripts": {
    "check:type": "tsc --noEmit",
    "build": "esbuild --bundle --platform=node --target=node18 --outdir=dist src/index.ts",
    "dev": "ts-node -T src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run"
  },
  "bin": {
    "depsynky": "./bin.js"
  },
  "author": "Botpress, Inc.",
  "license": "MIT",
  "dependencies": {
    "@bpinternal/yargs-extra": "^0.0.19",
    "chalk": "^4.1.2",
    "glob": "^9.3.4",
    "prettier": "^2.8.1",
    "prompts": "^2.4.2",
    "semver": "^7.5.1",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.3",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.11",
    "esbuild": "^0.25.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "8.6.2"
  },
  "packageManager": "pnpm@8.6.2"
}

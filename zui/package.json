{
  "name": "@bpinternal/zui",
  "version": "1.0.3",
  "description": "A fork of Zod with additional features",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run --bail 1",
    "dev": "tsx playground.ts",
    "test:watch": "vitest",
    "check:type": "tsc --noEmit",
    "check:format": "prettier --check src/",
    "fix:format": "prettier --write src/",
    "check": "pnpm run check:format && pnpm run check:type",
    "fix": "pnpm run fix:format"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/json-schema": "^7.0.15",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.6",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "benchmark": "^2.1.4",
    "jsdom": "^24.0.0",
    "local-ref-resolver": "^0.2.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.3.3",
    "ts-morph": "^22.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.2",
    "typescript": "5.8.3",
    "vite": "^5.2.6",
    "vitest": "1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/botpress/packages"
  },
  "author": "Botpress, Inc.",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "8.6.2"
  },
  "packageManager": "pnpm@8.6.2"
}
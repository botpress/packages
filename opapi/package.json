{
  "name": "@bpinternal/opapi",
  "version": "0.14.1",
  "description": "Opapi is a highly opinionated library to generate server, client and documentation from OpenAPI specification using typescript.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "url": "https://github.com/botpress/packages"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsup src/index.ts --dts --format cjs,esm --clean",
    "check:type": "tsc --noEmit",
    "check:format": "prettier --check .",
    "fix:format": "prettier --write ."
  },
  "devDependencies": {
    "@swc/core": "1.9.3",
    "@swc/helpers": "0.5.15",
    "@types/decompress": "4.2.7",
    "@types/express": "4.17.21",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.17.0",
    "@types/node": "^22.16.4",
    "@types/qs": "^6.9.15",
    "@types/verror": "1.10.10",
    "prettier": "3.4.1",
    "ts-node": "10.9.2",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vite": "5.4.11",
    "vite-node": "1.6.0",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "@anatine/zod-openapi": "1.12.1",
    "@readme/openapi-parser": "2.6.0",
    "axios": "1.7.8",
    "chalk": "4.1.2",
    "decompress": "4.2.1",
    "execa": "8.0.1",
    "json-schema-to-typescript": "13.1.2",
    "json-schema-to-zod": "1.1.1",
    "lodash": "^4.17.21",
    "openapi-typescript": "6.7.6",
    "openapi3-ts": "2.0.2",
    "radash": "12.1.0",
    "tsconfig-paths": "4.2.0",
    "verror": "1.10.1",
    "winston": "3.17.0",
    "zod": "3.22.4"
  },
  "author": "Botpress, Inc.",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "8.6.2"
  },
  "packageManager": "pnpm@8.6.2"
}

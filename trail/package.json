{
  "name": "@bpinternal/trail",
  "description": "Opentelemetry initialization package for nodejs.",
  "version": "0.2.5",
  "author": "Botpress, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/botpress/packages",
    "directory": "trail"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./init": "./dist/init.js",
    "./init.js": "./dist/init.js",
    "./package.json": "./package.json"
  },
  "readmeFilename": "readme.md",
  "peerDependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.50.0",
    "@opentelemetry/exporter-jaeger": "1.26.0",
    "@opentelemetry/instrumentation": "0.53.0",
    "@opentelemetry/propagator-jaeger": "1.26.0",
    "@opentelemetry/resources": "1.26.0",
    "@opentelemetry/sdk-trace-base": "1.26.0",
    "@opentelemetry/sdk-trace-node": "1.26.0",
    "@opentelemetry/semantic-conventions": "1.27.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "5.6.2",
    "vite": "5.4.8",
    "vitest": "1.3.1"
  },
  "scripts": {
    "build": "tsc --build",
    "check:type": "tsc --noEmit",
    "test": "vitest",
    "clean": "rimraf ./dist && rimraf ./node_modules"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "8.6.2"
  },
  "packageManager": "pnpm@8.6.2"

{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2017",
    "strict": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "declaration": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "zod": [
        "./src/zod/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.test.ts",
    "**/benchmark/**/*.ts",
  ],
  "include": [
    "src/**/*"
  ]
}
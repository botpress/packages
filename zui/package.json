{
  "name": "@bpinternal/zui",
  "version": "0.2.5",
  "description": "An extension of Zod for working nicely with UIs and JSON Schemas",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type:check": "tsc --noEmit",
    "format:check": "prettier --check src/",
    "format:fix": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.11",
    "@storybook/addon-interactions": "^7.6.11",
    "@storybook/addon-links": "^7.6.11",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^7.6.11",
    "@storybook/react": "^7.6.11",
    "@storybook/react-vite": "^7.6.11",
    "@storybook/test": "^7.6.11",
    "@types/react": "^18.2.48",
    "prettier": "^3.0.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.11",
    "tsup": "^8.0.1",
    "typescript": "5.3.3",
    "vitest": "1.3.1",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@bpinternal/json-schema-to-zod": "^2.0.15",
    "@bpinternal/zod-to-json-schema": "^3.22.5",
    "@jsonforms/core": "^3.2.1",
    "@jsonforms/react": "^3.2.1",
    "@jsonforms/vanilla-renderers": "^3.2.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0"
  },
  "bundledDependencies": [
    "zod"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/botpress/packages"
  },
  "keywords": [],
  "author": "Botpress, Inc.",
  "license": "MIT",
  "packageManager": "pnpm@8.6.0+"
}

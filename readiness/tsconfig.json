{
  "extends": "@tsconfig/node18-strictest/tsconfig.json",
  "compilerOptions": {
    // outDir path is computed from the tsconfig.json where the field is defined. It needs to be defined in the tsconfig.json of each project.
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": false,
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedLocals": false,
    "importsNotUsedAsValues": "remove",
    "noImplicitOverride": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}

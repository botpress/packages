{
  "name": "@bpinternal/signature-verification",
  "version": "0.1.0",
  "description": "Library to verify the signature of incoming webhook requests",
  "license": "0BSD",
  "author": "Botpress Technologies, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/botpress/packages"
  },
  "source": "./src/index.ts",
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "vitest run --bail 1",
    "test:watch": "vitest",
    "check:coverage": "vitest run --coverage",
    "check:oxlint": "oxlint -c .oxlintrc.json",
    "check:format": "oxfmt --check .",
    "check:type": "tsc --noEmit",
    "check:knip": "knip",
    "check": "npm run check:oxlint && npm run check:type && npm run check:format",
    "fix:oxlint": "oxlint -c .oxlintrc.json --fix --fix-suggestions",
    "fix:format": "oxfmt --write .",
    "fix": "npm run fix:oxlint && npm run fix:format",
    "ci": "npm run check && npm run test",
    "build": "tsup",
    "watch": "tsup --watch"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.17.0",
    "@vitest/coverage-v8": "^4.0.18",
    "express": "^5.2.1",
    "knip": "^5.82.1",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "0.11.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=19.0.0",
    "pnpm": "10.28.2"
  },
  "packageManager": "pnpm@10.28.2"
}
